<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TrueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorButtonGreen</item>
        <item name="android:textColor">@color/colorTextNormal</item>
    </style>

    <style name="AppTheme.FalseButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorButtonRed</item>
        <item name="android:textColor">@color/colorTextNormal</item>
    </style>

    <style name="AppTheme.NextButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorButtonBlue</item>
        <item name="android:textColor">@color/colorTextNormal</item>
    </style>

    <style name="AppTheme.BackButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorBlack</item>
        <item name="android:textColor">@color/colorTextNormal</item>
    </style>

</resources>
